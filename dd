    <script>
    
        function openLink() {
            let input = document.getElementById("numberInput").value;
            if (/^\d+$/.test(input)) { // Please set Id Only
                let url = `https://cysaw.top/uploads/${input}.zip`;
                window.location.href = url;
            } else {
                alert("Please set Id Only");
            }
        }
